# BLR Thrifter Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Backend Configuration
# ===================
NODE_ENV=development
PORT=5000
MONGODB_URI=mongodb://localhost:27017/blr-thrifter
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
FRONTEND_URL=http://localhost:3000

# ===================
# AI Services Configuration
# ===================

# OpenAI API Key (required for RAG)
OPENAI_API_KEY=sk-your-openai-api-key

# Pinecone Configuration (optional - uses FAISS by default)
USE_PINECONE=false
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=blr-thrifter
PINECONE_ENVIRONMENT=us-east-1

# Google Maps API (optional - for web scraper)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ===================
# Frontend Configuration
# ===================
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_AI_URL=http://localhost:8000

